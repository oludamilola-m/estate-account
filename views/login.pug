extends layout

block content
  section.login
    header.login-header
      h1= title
      p Sign in to continue
    form.login-form(action='/login', method="POST")
      label(for='username') Username
      input#username(type='text' name='username' placeholder='Enter Username')
      label(for='password') Password
      input#password(type='password' name='password' placeholder='Enter Password')
      input(type='submit' value='Log in')
