extends ../layout

block content
  div.card__title
    span New Bill
    p.card__hint Create a New Bill
  form.new-bill(action='/bills', method="POST")
    div.card__body
      div.form-group
        label(for='name') Name
        input#form-name(type='text' name='name' value=`${name}` placeholder='Name of Bill')
      div.form-group
        label(for='amount') Amount
        input#form-payment(type='number' name='amount' value=`${amount}` placeholder='Amount')
      div.form-group
        input.btn--primary.btn--save(type='submit' value='Save')
