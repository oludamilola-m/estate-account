doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title= title
    script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/fontawesome.min.js")
    link(href='https://fonts.googleapis.com/css2?family=Roboto&display=swap' rel='stylesheet')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css")
    link(rel='stylesheet', href="/stylesheets/style.css")
    link(rel='stylesheet', href="/stylesheets/datatables.css")
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    link(href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js")
    script(src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js")
    script(src="https://cdn.datatables.net/plug-ins/1.10.21/api/sum().js")
    script(src="https://cdn.datatables.net/buttons/1.6.2/js/dataTables.buttons.min.js")
    script(src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.flash.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js")
    script(src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.html5.min.js")
    script(src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.print.min.js")
    script(src="/javascript/index.js")
  body.main-body
    include ./partials/_flash
    header
    main(class="container")
      section(class="side-bar")
        div(class="side-bar__navigation")
          a(href="/dashboard")
            div(class=`nav-item${ active === 'dashboard' ? ' active' : ''}`)
              span.fas.fa-home.nav-icon
              span Dashboard
          a(href="/bills")
            div(class=`nav-item${ active === 'bills' ? ' active' : ''}`)
              span.fas.fa-file-invoice.nav-icon
              span Bills
          a(href="/payments")
            div(class=`nav-item${ active === 'payments' ? ' active' : ''}`)
              span.fas.fa-money-check.nav-icon
              span Payments
          a(href="/apartments")
            div(class=`nav-item${ active === 'apartments' ? ' active' : ''}`)
              span.fas.fa-building.nav-icon
              span Apartments
        div(class="side-bar__others")
          a(href="/settings")
            div(class=`nav-item${ active === 'settings' ? ' active' : ''}`)
              span.fas.fa-tools.nav-icon
              span Settings
          a(href="/notifications")
            div(class=`nav-item${ active === 'notifications' ? ' active' : ''}`)
              span.fas.fa-bell.nav-icon
              span Notifications
          a(href="/change-password")
            div(class=`nav-item${ active === 'change password' ? ' active' : ''}`)
              span.fas.fa-key.nav-icon
              span Change Password
          a(href="/logout")
            div(class='nav-item')
              span.fas.fa-power-off.nav-icon
              span Logout
      section(class="card main-content")
        block content
